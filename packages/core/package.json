{
  "name": "@merkur/core",
  "version": "0.15.0",
  "description": "Merkur is tiny and extensible library for creating front-end microservices.",
  "main": "lib/index",
  "module": "lib/index",
  "sideEffects": false,
  "scripts": {
    "preversion": "npm test",
    "test": "../../node_modules/.bin/jest --no-watchman -c ./jest.config.js",
    "test:es:version": "../../node_modules/.bin/es-check es5 ./lib/index.es5.js && ../../node_modules/.bin/es-check es9 ./lib/index.js",
    "build": "node_modules/.bin/rollup -c",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjancarik/merkur.git"
  },
  "keywords": [
    "microservices",
    "microfrontends",
    "SSR",
    "merkur",
    "widget",
    "react",
    "preact",
    "hyperhtml",
    "library"
  ],
  "author": "Miroslav Jancarik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjancarik/merkur/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://merkur.js.org/",
  "devDependencies": {
    "rollup": "^2.23.0"
  }
}
