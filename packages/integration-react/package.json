{
  "name": "@merkur/integration-react",
  "version": "0.13.0",
  "description": "Merkur module for easy integration with react.",
  "main": "lib/index",
  "module": "lib/index",
  "scripts": {
    "preversion": "npm test",
    "test": "../../node_modules/.bin/jest --no-watchman -c ./jest.config.js",
    "test:es:version": "../../node_modules/.bin/es-check es5 ./lib/index.es5.js && ../../node_modules/.bin/es-check es9 ./lib/index.js",
    "build": "node_modules/.bin/rollup -c",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjancarik/merkur.git"
  },
  "keywords": [
    "merkur",
    "integration",
    "react"
  ],
  "author": "Miroslav Jancarik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjancarik/merkur/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://merkur.js.org/",
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@merkur/core": "^0.13.0",
    "@merkur/plugin-component": "^0.13.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "^3.5.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rollup": "^2.22.1"
  },
  "peerDependencies": {
    "@merkur/core": "*",
    "react": "16.*",
    "react-dom": "16.*"
  }
}
