{
  "name": "@merkur/cli",
  "version": "0.38.1",
  "description": "Merkur is tiny and extensible library for creating front-end microservices.",
  "bin": {
    "merkur": "./bin/merkur.mjs"
  },
  "types": "./types.d.ts",
  "exports": {
    ".": {
      "types": "./types.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./server": {
      "import": "./lib/server.mjs",
      "require": "./lib/server.cjs"
    }
  },
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "prepare": "npm run build",
    "dev": "node ./scripts/build.mjs --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjancarik/merkur.git"
  },
  "keywords": [
    "merkur",
    "plugin",
    "microservices",
    "microfrontends",
    "cli",
    "esbuild"
  ],
  "author": "Miroslav Jancarik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjancarik/merkur/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://merkur.js.org/",
  "dependencies": {
    "@esmj/emitter": "^0.4.3",
    "@esmj/observable": "^0.2.1",
    "@types/cors": "^2.8.19",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "compression": "^1.8.0",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.5",
    "esbuild-plugin-manifest": "^1.0.5",
    "express": "^5.1.0",
    "npm-run-path": "^6.0.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@merkur/core": "^0.38.0",
    "@types/express": "^5.0.3"
  },
  "engines": {
    "node": ">=20"
  }
}
