{
  "name": "@merkur/cli",
  "version": "0.37.1",
  "description": "Merkur is tiny and extensible library for creating front-end microservices.",
  "bin": {
    "merkur": "./bin/merkur.mjs"
  },
  "types": "./types.d.ts",
  "exports": {
    ".": {
      "types": "./types.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./server": {
      "import": "./lib/server.mjs",
      "require": "./lib/server.cjs"
    }
  },
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "prepare": "npm run build",
    "dev": "node ./scripts/build.mjs --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjancarik/merkur.git"
  },
  "keywords": [
    "merkur",
    "plugin",
    "microservices",
    "microfrontends",
    "cli",
    "esbuild"
  ],
  "author": "Miroslav Jancarik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mjancarik/merkur/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://merkur.js.org/",
  "dependencies": {
    "@esmj/emitter": "^0.4.1",
    "@esmj/observable": "^0.1.1",
    "@types/cors": "^2.8.17",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "compression": "^1.7.4",
    "ejs": "^3.1.9",
    "esbuild": "^0.20.1",
    "esbuild-plugin-manifest": "^1.0.3",
    "express": "^4.18.2",
    "npm-run-path": "^5.3.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14"
  },
  "peerDependencies": {
    "@merkur/tools": "*"
  },
  "engines": {
    "node": ">=20"
  }
}
