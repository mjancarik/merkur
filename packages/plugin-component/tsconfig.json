{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "declarationDir": "lib/types",
    "outDir": "./lib",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*Spec.ts"
  ]
}